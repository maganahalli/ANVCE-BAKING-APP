<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobile.anvce.baking">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.RecipeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.IngredientsListActivity"
            android:label="@string/title_recipe_list"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity
            android:name=".activities.MainBakingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.StepDetailActivity"
            android:label="@string/title_activity_step_detail"
            android:parentActivityName=".activities.MainBakingActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mobile.anvce.baking.activities.MainBakingActivity" />
        </activity>

        <receiver android:name=".activities.StepDetailFragment$MediaReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".widget.RecipeWidgetBroadcastReceiver"/>

        <receiver
            android:name=".widget.RecipeWidgetProvider"
            android:label="@string/baking_ingredients_widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="me.indiandollar.apps.todoappcollectionwidget.app.ACTION_DATA_UPDATED"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/baking_recipes_app_widget_info"/>
        </receiver>

        <service android:name=".widget.RecipeWidgetRemoteViewsService"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>


    </application>

</manifest>